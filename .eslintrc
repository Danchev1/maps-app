{
  "parser": "@babel/eslint-parser",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "quotes": ["error", "single", "avoid-escape"]
  }
}
